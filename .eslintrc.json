{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["standard-with-typescript", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "comma-dangle": [2, "never"],
    "no-use-before-define": [
      "error",
      { "functions": true, "classes": true, "variables": false }
    ]
  }
}
